.PHONY: all clean fclean re

CXX			= clang++
CXX_FLAGS	= -Wall -Wextra -Werror
NAME 		= brainz

SRC			= main.cpp\
			  Zombie.cpp\
			  ZombieHorde.cpp\

OBJ			= $(SRC:.cpp=.o)

all:			$(NAME)

$(NAME):		$(OBJ)
				$(CXX) $(CXX_FLAGS) -o $(NAME) $(OBJ)

clean:
				$(RM) $(OBJ)

fclean:			clean
				rm -f $(NAME)

re:				fclean $(NAME)
